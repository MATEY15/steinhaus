.advantages-navigate
	position absolute
	top 0
	height 100%
	width 100%
	.slick-arrow
		position absolute
		top 0
		display flex !important
		justify-content center
		align-items center
		height 100%
		width 125px
		min-height 100%
		background: rgba(0, 0, 0, 0.1)
		cursor pointer
