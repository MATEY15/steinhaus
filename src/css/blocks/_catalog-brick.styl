	/* Radio */

.radio
	display: inline-block
	margin-right: 15px
	&:last-child
		margin-right: 0
	input
		position: absolute
		z-index: -1
		opacity: 0
		margin: 10px 0 0 7px
		display: none

.radio__text
	position: relative
	display: inline-block
	cursor: pointer
	-webkit-touch-callout: none
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	
	p
		color: #8c8c8c
		font-size: 12px
		font-weight: 300
	
	.status-icon
		position relative
		display block
		height 18px
		width 18px
		margin 0 auto 10px

		&:before
			content: ''
			position: absolute
			top: 1px
			left: 0px
			width: 17px
			height: 17px
			border: 1px solid #dadada
			background-color: #ffffff
			border-radius: 50%
			-webkit-transition: .2s
			transition: .2s

		&:after
			content: ''
			position: absolute
			top: 6px
			left: 5px
			width: 9px
			height: 9px
			background-color: #f6121c
			border-radius: 50%
			opacity: 0
			-webkit-transition: .2s
			transition: .2s

.radio input:checked + .radio__text .status-icon:after
	opacity: 1

